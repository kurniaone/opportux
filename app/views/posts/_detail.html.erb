<div class="post-image">
  <%= link_to image_tag(post.image_url(:large), :alt => post.title), post_path(post) %>
</div>

<div class="post-info">
  <div class="post-title"><%= link_to truncate(post.title), post_path(post) %></div>
  <div class="author-name"><%= truncate(post.name) %></div>

  <div class="post-action">
    <%= link_to 'edit', edit_post_path(post) %>
    <%= link_to 'remove', post_path(post), :method => 'delete', :confirm => 'Are you sure?' %>
  </div>
</div>

<div class="clear"></div>