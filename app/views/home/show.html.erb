<div class="item-detail-container">
  <div class="item-view-info">
    <span><%= @post.view || 0 %></span> views
  </div>

  <div class="author-container">
    <div class="author-image">
      <%= image_tag 'dummy/user-thumb-image.png', :alt => 'avtr', :class => 'user-thumb-image' %>
    </div>

    <div class="author-info">
      <%= link_to @post.user.fullname, '#', :class => 'author-name-link' %>

      <div class="item-location"><%= @post.location.name %></div>
      <div class="item-category">
        <% @post.tag_list.each do |tag| %>
          <%= link_to tag, '#', :class => 'tag-list' %>
        <% end %>
      </div>
      <div class="clear"></div>
    </div>

    <div class="item-action">
      <% if current_user && can?(:manage, Post) %>
        <%= link_to('Publish', publish_posts_path(@post.slug), :class => 'publish-link') unless @post.published? %>

        <%= link_to 'Edit', edit_post_path(@post.slug), :class => 'edit-link' %>

        <%= link_to('Renew', renew_posts_path(:slug => @post.slug), :class => 'renew-link') if can_renew?(@post) %>

        <%= link_to 'Remove', post_path(@post.slug), :class => 'remove-link', :method => 'delete',
          :confirm => 'Are you sure you want to remove this post?' %>
      <% else %>

        <%= link_to('Like', like_posts_path(@post.slug), :class => 'like-link') if can_like?(@post) %>
        <%= link_to 'x Report', '#report', :class => 'report-link' %>
      <% end %>
    </div>
    <div class="clear"></div>
  </div>

  <div class="detail-image-container">
    <%= image_tag @post.main_image.image_url(:large), :class => 'image' %>
  </div>

  <div class="detail-stat">
    <span class="item-time"><%= "#{time_ago_in_words(@post.created_at)} ago" %></span>
    <span class="item-like"><%= pluralize(@post.like, 'Like') %></span>
    <div class="clear"></div>
  </div>

  <div class="detail-description-info">
    <div class="detail-info-tab">
      <ul>
        <li>
          <%= link_to 'Description', show_info_home_index_path(:slug => @post.slug, :info => 'description'),
            :id => 'description', :class => 'active' %>
        </li><!--
     --><li>
          <%= link_to 'Deal', @post.deal.blank? ? '#deal' : show_info_home_index_path(:slug => @post.slug, :info => 'deal'),
            :id => 'deal', :class => '' %>
        </li><!--
     --><li>
          <%= link_to 'Photos', @post.images.count == 0 ? '#photos' : show_info_home_index_path(:slug => @post.slug, :info => 'photos'),
            :id => 'photos', :class => '' %>
        </li>
      </ul>
      <div class="clear"></div>
    </div>

    <h2><%= @post.title %></h2>
    <div class="detail-info">
      <%= render :partial => '/home/detail-description.html' %>
    </div>

  </div>
</div>