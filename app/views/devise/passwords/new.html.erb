<div class="devise-form forgot-password">
  <h2>Forgot your password?</h2>

  <div class="flash">
    <% flash.each do |type, message| -%>
      <div class="message <%= type %>">
        <p><%= message.html_safe %></p>
      </div>
    <% end %>
  </div>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :remote => true,
    :html => { :method => :post, :class => 'form' }) do |f| %>
    <div>
      <p>
        Enter the email address you used when you joined and weâ€™ll send you instructions to reset your password.
      </p>
      <p>
        For security reasons, we do NOT store your password. So rest assured that we will never send your password via email.
      </p>
    </div>

    <div class="field-group">
      <%= f.label :email %>
      <%= f.email_field :email, :class => 'text-field' %>
    </div>

    <div class="field-group form-action right-el">
      <%= f.submit "Send", :class => 'button-link' %>
    </div>
    <div class="clear"></div>
  <% end %>
</div>

