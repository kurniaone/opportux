<div class="devise-form reset-password-form">
  <h2>Change your password</h2>

  <div class="flash">
    <% flash.each do |type, message| -%>
      <div class="message <%= type %>">
        <p><%= message.html_safe %></p>
      </div>
    <% end %>
  </div>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :remote => true, :html => { :method => :put, :class => 'form' }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field-group">
      <%= f.label :password, "New password" %>
      <%= f.password_field :password, :class => 'text-field' %>
    </div>

    <div class="field-group">
      <%= f.label :password_confirmation, "Confirm new password" %>
      <%= f.password_field :password_confirmation, :class => 'text-field' %>
    </div>

    <div class="fied-group form-action">
      <%= f.submit "Change my password", :class => 'button-link' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

